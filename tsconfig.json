{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./src/",
      "./node_modules/@types"
    ]
  },
  "include": ["src", ".src/declaration.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}